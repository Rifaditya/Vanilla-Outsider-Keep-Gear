{
    "schemaVersion": 1,
    "id": "vanilla-outsider-keep-gear",
    "version": "${version}",
    "name": "Vanilla Outsider: Keep Gear",
    "description": "Keep your gear on death! Items with durability are preserved, materials drop. Features configurable penalties, blacklists, and custom gamerules.",
    "authors": [
        "DasikIgaijin"
    ],
    "contact": {
        "homepage": "https://github.com/Rifaditya",
        "sources": "https://github.com/Rifaditya/Vanilla-Outsider-Keep-Gear"
    },
    "license": "GPL-3.0",
    "environment": "*",
    "entrypoints": {
        "main": [
            {
                "value": "net.vanillaoutsider.keepgear.KeepGear",
                "adapter": "kotlin"
            }
        ],
        "modmenu": [
            {
                "value": "net.vanillaoutsider.keepgear.client.KeepGearModMenu",
                "adapter": "kotlin"
            }
        ]
    },
    "mixins": [
        "vanilla-outsider-keep-gear.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.18.4",
        "minecraft": "~1.21.11",
        "java": ">=21",
        "fabric-api": "*",
        "fabric-language-kotlin": "*"
    },
    "suggests": {
        "modmenu": "*",
        "cloth-config": "*",
        "trinkets": "*"
    }
}